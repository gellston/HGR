<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <HGRNativeRoot>$(MSBuildThisFileDirectory)</HGRNativeRoot>
    <HGRLibDir>$(HGRNativeRoot)lib\x64\$(Configuration)</HGRLibDir>
  </PropertyGroup>

  <!-- x64만 지원: Win32로 빌드하면 에러 -->
  <Target Name="HGR_EnforceX64" BeforeTargets="ClCompile">
    <Error
      Condition="'$(Platform)'!='x64'"
      Text="HGR.Native.Cu118: This package supports x64 only. Current Platform='$(Platform)'. Please build with Platform=x64." />
  </Target>

  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>
        $(HGRNativeRoot)include;%(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
    </ClCompile>

    <Link>
      <AdditionalLibraryDirectories>
        $(HGRLibDir);%(AdditionalLibraryDirectories)
      </AdditionalLibraryDirectories>

      <AdditionalDependencies>
        HGR.Native.Cu118.lib;%(AdditionalDependencies)
      </AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
</Project>